generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

/**
 * ---------- ENUMS ----------
 */

enum SpiceLevel {
  NO
  LOW
  MEDIUM
  HIGH
}

enum Visibility {
  PUBLIC
  PRIVATE
}

enum UserRole {
  ADMIN
  SUPER_ADMIN
}

enum AdminRequestStatus {
  PENDING
  APPROVED
  REJECTED
}

enum AuditAction {
  CREATE
  UPDATE
  DELETE
  LOGIN
  LOGOUT
  APPROVE_ADMIN
}

/**
 * ---------- MODELS ----------
 */

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  role      UserRole @default(ADMIN)
  isActive  Boolean  @default(true)

  menuItems MenuItem[]
  auditLogs AuditLog[]
  sessions  Session[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

/**
 * Admin approval requests (handled by SUPER_ADMIN)
 */
model AdminRequest {
  id        String              @id @default(uuid())
  email     String              @unique
  status    AdminRequestStatus  @default(PENDING)
  token     String              @unique
  expiresAt DateTime

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Session {
  id        String   @id @default(uuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  expiresAt DateTime
  createdAt DateTime @default(now())

  @@index([userId])
}

/**
 * One-time login codes (OTP)
 */
model LoginCode {
  id        String   @id @default(uuid())
  email     String
  code      String
  expiresAt DateTime
  used      Boolean  @default(false)

  createdAt DateTime @default(now())

  @@index([email])
}

/**
 * Audit logs for admin actions
 */
model AuditLog {
  id        String      @id @default(uuid())
  action    AuditAction
  entity    String
  entityId  String?
  message   String?

  userId    String
  user      User @relation(fields: [userId], references: [id])

  createdAt DateTime @default(now())
}

/**
 * ---------- BUSINESS MODELS ----------
 */

model Category {
  id String @id @default(uuid())

  nameEn String @unique
  nameFi String @unique

  order    Int     @default(0)
  isActive Boolean @default(true)

  menuItems MenuItem[]

  createdAt DateTime @default(now())
}

model Tag {
  id String @id @default(uuid())

  nameEn String @unique
  nameFi String @unique

  menuItems MenuItem[] @relation("MenuItemTags")

  createdAt DateTime @default(now())
}

model Ingredient {
  id String @id @default(uuid())

  nameEn String @unique
  nameFi String @unique

  menuItems MenuItem[] @relation("MenuItemIngredients")
}

model MenuItem {
  id String @id @default(uuid())

  nameEn        String
  nameFi        String
  descriptionEn String
  descriptionFi String

  price    Float
  discount Float @default(0)

  imageUrl      String?
  imagePublicId String?

  servings Int
  spicey   SpiceLevel

  visibility Visibility @default(PUBLIC)
  isArchived Boolean    @default(false)

  categoryId String
  category   Category @relation(fields: [categoryId], references: [id])

  userId String
  user   User @relation(fields: [userId], references: [id])

  tags         Tag[]         @relation("MenuItemTags")
  favorites    Favorite[]
  ingredients  Ingredient[] @relation("MenuItemIngredients")

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Favorite {
  id       String @id @default(uuid())
  cookieId String

  menuItemId String
  menuItem   MenuItem @relation(fields: [menuItemId], references: [id])

  createdAt DateTime @default(now())

  @@unique([cookieId, menuItemId])
}
